<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kutuphanem_small_margin_top_space"
                android:layout_marginRight="@dimen/kutuphanem_small_margin_top_space"
                android:focusableInTouchMode="true"
                app:boxCornerRadiusBottomEnd="@dimen/kutuphanem_general_margin_top"
                app:boxCornerRadiusBottomStart="@dimen/kutuphanem_general_margin_top"
                app:boxCornerRadiusTopEnd="@dimen/kutuphanem_general_margin_top"
                app:boxCornerRadiusTopStart="@dimen/kutuphanem_general_margin_top"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_baseline_search_grey_24">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/searchInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/searchHintText"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/notificationImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/searchInputLayout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_notifications_48"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/cart_badge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/notificationImageId"
                android:layout_gravity="right|end|top"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:padding="3dp"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/google_colors"/>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/vbsari">

                    <ImageView
                        android:id="@+id/yeniIconLeftId"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/yeni_icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/anasayfaHosgeldinMessageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/kutuphanem_small_margin_top_space"
                        android:layout_toRightOf="@id/yeniIconLeftId"
                        android:text="@string/yeniArayuzText"
                        style="@style/TextAppearance.White.Normal.Alegrya.Bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/kutuphanem_login_margin_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Transparent.Large.Alegrya.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/dashKategoriText" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:background="@color/kategoriBackground"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.mesutemre.kutuphanem.util.customcomponents.CustomErrorComponent
                        android:id="@+id/dashKategoriHataTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:custom_error_message="@string/dashKategoriListeHata"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/dashKategoriProgressBarId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ilgiAlanHataTextViewId"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:indeterminateDrawable="@drawable/wheel_progress_indeterminate_small" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dashKategoriRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/kutuphanem_general_margin_top"
                    android:background="@color/lacivert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/tanitimViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tanitimTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/kutuphanem_general_margin_top"
                        android:layout_gravity="bottom"
                        android:background="@color/lacivert"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/alegreya"
                        android:text="@string/encokYorumlananlarText"
                        android:textColor="@color/transparent"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>